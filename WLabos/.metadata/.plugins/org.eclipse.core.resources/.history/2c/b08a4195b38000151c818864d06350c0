package datamanagement.labo1.indexing;

import java.io.IOException;
import java.nio.file.FileSystems;

import org.apache.lucene.analysis.Analyzer;
import org.apache.lucene.analysis.core.StopAnalyzer;
import org.apache.lucene.analysis.core.WhitespaceAnalyzer;
import org.apache.lucene.analysis.shingle.ShingleAnalyzerWrapper;
import org.apache.lucene.analysis.standard.StandardAnalyzer;

public class Main {
	
	public static void main(String[] args) {
		
		AnalyzersType type = AnalyzersType.Shingle; //change here to select analyzer
		
		Analyzer analyzer = null;
		switch(type)
		{
		case WhiteSpace: analyzer = new WhitespaceAnalyzer();
			break;
		case Shingle2: analyzer = new ShingleAnalyzerWrapper(2, 2);
			break;
		case Shingle3: analyzer = new ShingleAnalyzerWrapper(3, 3);
			break;
		case Stop: try {
				analyzer = new StopAnalyzer(FileSystems.getDefault().getPath("commons_words.txt"));
			} catch (IOException e) {
				System.out.println(e.getMessage());
			}
			break;
		case Standard: 
		default: analyzer = new StandardAnalyzer();
		}
		
		if(null != analyzer)
		{
			Lab1Indexer indexer = new Lab1Indexer(analyzer, "cacm.txt");
			indexer.IndexPublications();
		}
	}
}
